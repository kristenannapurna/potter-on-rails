<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Death eater</th>
      <th>Dumbledores army</th>
      <th>Order of the phoenix</th>
      <th>Alias</th>
      <th>Wand</th>
      <th>Birthday</th>
      <th>Boggart</th>
      <th>Patronus</th>
      <th>House</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.death_eater %></td>
        <td><%= character.dumbledores_army %></td>
        <td><%= character.order_of_the_phoenix %></td>
        <td><%= character.alias %></td>
        <td><%= character.wand %></td>
        <td><%= character.birthday %></td>
        <td><%= character.boggart %></td>
        <td><%= character.patronus %></td>
        <td><%= character.house %></td>
        <td><%= character.school %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

