<p id="notice"><%= notice %></p>

<h1>Listing Houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Founder</th>
      <th>Description</th>
      <th>Color</th>
      <th>Animal</th>
      <th>Element</th>
      <th>School</th>
      <th>Ghost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.founder %></td>
        <td><%= house.description %></td>
        <td><%= house.color %></td>
        <td><%= house.animal %></td>
        <td><%= house.element %></td>
        <td><%= house.school %></td>
        <td><%= house.ghost %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

